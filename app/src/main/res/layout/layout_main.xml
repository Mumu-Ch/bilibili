<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_launcher_foreground"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/UserName"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_marginTop="360dp">

        <Button
            android:id="@+id/btn_main_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="学习"
            android:textColor="@color/black"
            android:background="@drawable/bg_main_btn1"/>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btn_main_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="运动"
            android:background="@drawable/bg_main_btn2"
            android:textColor="@color/black"/>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btn_main_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="敲代码"
            android:background="@drawable/bg_main_btn3"
            android:textColor="@color/black"/>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btn_main_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="睡觉"
            android:background="@drawable/bg_main_btn4"
            android:textColor="@color/black"/>

    </LinearLayout>



</LinearLayout>